- if @page.is_a?(EventPage)
  %div.clear
  %table.fieldset
    - if @page.all_day_event
      = render :partial => "event_start_date_only", :object => @page
    - elsif @page.no_end_time
      = render :partial => "event_start_datetime", :object => @page
    - else
      = render :partial => "event_start_datetime", :object => @page
      = render :partial => "event_end_datetime", :object => @page
    %tr
      %th.label
        %span{:style => "font-weight: normal;"} Event options
      %td.field
        = check_box 'page', 'all_day_event'
        = label 'page', 'all_day_event', "All day event"
        &nbsp;
        = check_box 'page', 'no_end_time'
        = label 'page', 'no_end_time', "No end time"
  %br
